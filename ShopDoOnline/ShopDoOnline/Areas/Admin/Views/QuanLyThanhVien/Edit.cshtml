@model ShopDoOnline.Models.ThanhVien

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "QuanLyThanhVien", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Mã thành viên :</label>
            <div class="col-md-10">
                <input type="text" size="70" name="iMaThanhVien" value="@Model.MaThanhVien" readonly />
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2">Tài khoản :</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTaiKhoan" value="@Model.TaiKhoan" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mật khẩu :</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sMatKhau" value="@Model.MatKhau" >
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Họ tên :</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sHoTen" value="@Model.HoTen" >
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Địa chỉ :</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sDiaChi" value="@Model.DiaChi" >
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Email :</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sEmail" value="@Model.Email">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">SDT :</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sSDT" value="@Model.SoDienThoai">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ưu đãi :</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sUuDai" value="@Model.LoaiThanhVien.UuDai">
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("QUAY LẠI TRANG QUẢN LÝ THÀNH VIÊN", "Index")
</div>
